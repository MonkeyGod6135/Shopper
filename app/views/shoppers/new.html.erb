<h1>Create Shopping List</h1>
<form action="/shoppers" method="post">
	<div class="form-group">
		<label>Shopping List Name:</label>
		<input type="text" name="shopper[shopping_list_name]" class="form-control">		
	</div>
	<div class="form-group">
		<label>Store:</label>
		<input type="text" name="shopper[store]" class="form-control">		
	</div>
	<div class="form-group">
		<label>Date:</label>
		<input type="date" name="shopper[date]" class="form-control">		
	</div>
	<input type="submit" value="Create" class="btn btn-primary">
	
</form>
<% if flash[:errors] %>
	<% flash[:errors].each do |e| %>
	<div class="alert alert-danger"><%= e %></div>
	<% end %>
<% end %>
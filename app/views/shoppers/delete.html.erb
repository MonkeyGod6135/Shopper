<h1>Delete <%= @shopper.shopping_list_name %> </h1>
<form action="/shoppers/<%= @shopper.id %>" method="post">
	<input type="hidden" name="_method" value="delete">
	<div class="form-group">
		<label>Shopping List Name:</label>
		<input type="text" name="shopper[shopping_list_name]" value="<%= @shopper.shopping_list_name %>" disabled class="form-control">		
	</div>
	<div class="form-group">
		<label>Store:</label>
		<input type="text" name="shopper[store]" value="<%= @shopper.store %>" disabled class="form-control">		
	</div>
	<div class="form-group">
		<label>Date:</label>
		<input type="text" name="shopper[date]" value="<%= @shopper.date %>" disabled class="form-control">		
	</div>
	<input type="submit" value="Delete" class="btn btn-primary">
</form>
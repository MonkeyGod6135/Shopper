<h1><%=  pluralize(@lists.count, "Shopping List Items") %> </h1>
<table class="table table-dark table-striped">
	<thead>
		<th scope="col">Item Name</th>
		<th scope="col">Price</th>
		<th scope="col">Quantity</th>
		<th scope="col">Actions</th>
	</thead>
	<tbody>
		<% @lists.each do |list| %>
		<tr>
			<td><%= list.item_name %></td>
			<td><%= list.price %></td>
			<td><%= list.quantity %></td>
			<td>
	<a href="/lists/<%= list.id %>/edit">Edit Item</a>	|
	<a href="/lists/<%= list.id %>/delete">Delete Item</a>	</td>
		</tr>
		<% end %>
	</tbody>
</table>
<a href="/lists/new" class="btn btn-primary">Create Item</a>

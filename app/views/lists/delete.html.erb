<h1>Delete List Item </h1>
<form action="/lists/<%= @list.id %>" method="post">
	<input type="hidden" name="_method" value="delete">
	<div class="form-group">
		<label>Item Name:</label>
		<input type="text" name="list[item_name]" value="<%= @list.item_name %>" disabled class="form-control">		
	</div>
	<div class="form-group">
		<label>Price:</label>
		<input type="text" name="list[price]" value="<%= @list.price %>" disabled class="form-control">		
	</div>
	<div class="form-group">
		<label>Quantity:</label>
		<input type="text" name="list[quantity]" value="<%= @list.quantity %>" disabled class="form-control">		
	</div>
	<input type="submit" value="Delete" class="btn btn-primary">
</form>